<idea-plugin package="cc.unitmesh.idea">
    <!--suppress PluginXmlValidity -->
    <dependencies>
        <plugin id="com.intellij.modules.java"/>
        <plugin id="org.jetbrains.plugins.gradle"/>
    </dependencies>

    <extensions defaultExtensionNs="cc.unitmesh">
        <classContextBuilder language="JAVA"
                             implementationClass="cc.unitmesh.idea.java.context.JavaClassContextBuilder"/>

        <methodContextBuilder language="JAVA"
                              implementationClass="cc.unitmesh.idea.java.context.JavaMethodContextBuilder"/>

        <fileContextBuilder language="JAVA"
                            implementationClass="cc.unitmesh.idea.java.context.JavaFileContextBuilder"/>

        <variableContextBuilder language="JAVA"
                                implementationClass="cc.unitmesh.idea.java.context.JavaVariableContextBuilder"/>

        <chatContextProvider implementation="cc.unitmesh.idea.java.provider.JavaVersionProvider"/>
        <chatContextProvider implementation="cc.unitmesh.idea.java.provider.SpringContextProvider"/>

        <contextPrompter
                language="JAVA"
                implementation="cc.unitmesh.idea.provider.JvmIdeaContextPrompter"/>
        <devFlowProvider
                language="JAVA"
                implementation="cc.unitmesh.idea.provider.JvmAutoDevFlow"/>
        <promptStrategy
                language="JAVA"
                implementation="cc.unitmesh.idea.provider.JvmPromptStrategy"/>

        <testContextProvider
                language="JAVA"
                implementation="cc.unitmesh.idea.provider.JvmTestContextProvider"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <runLineMarkerContributor language="JAVA"
                                  implementationClass="cc.unitmesh.idea.contributor.AutoDevFeatureMarkerContributor"/>

    </extensions>
</idea-plugin>
