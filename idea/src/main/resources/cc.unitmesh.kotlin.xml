        <module name="cc.unitmesh.idea"/>
    </dependencies>

    <extensions defaultExtensionNs="cc.unitmesh">
        <classContextBuilder language="kotlin"
                             implementationClass="cc.unitmesh.idea.kotlin.context.KotlinClassContextBuilder"/>

        <methodContextBuilder language="kotlin"
                              implementationClass="cc.unitmesh.idea.kotlin.context.KotlinMethodContextBuilder"/>

        <fileContextBuilder language="kotlin"
